<div class="page-width">
  <div class="accordion-container">
    <h2 class="acctitle">{{ section.settings.accordian1 }}</h2>
    <div class="blockstar">
      {% for block in section.blocks %}
        <div class="set">
          <a href="#">
            {{ block.settings.accordiatitle }}
            <i class="fa fa-plus"></i>
          </a>
          <div class="clscontent">
            <p class="paregraphwriter">
              {{ block.settings.accordianperegraph }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
    $(document).ready(function() {
    $(".set > a").on("click", function(e) {
        e.preventDefault();
      console.log("HIIII");
      if ($(this).closest('.set').find('a').hasClass("active")) {
        $(this).closest('.set').find('a').removeClass("active");
        $(this)
          .siblings(".clscontent")
          .slideUp(200);
        $(".set > a i")
          .removeClass("fa-minus")
          .addClass("fa-plus");
      } else {
        $(".set > a i")
          .removeClass("fa-minus")
          .addClass("fa-plus");
        $(this)
          .find("i")
          .removeClass("fa-plus")
          .addClass("fa-minus");
        $(".set > a").closest('.set').find('a').removeClass("active");
        $(this).closest('.set').find('a').addClass("active");
        $(".clscontent").slideUp(200);
        $(this)
          .siblings(".clscontent")
          .slideDown(200);
      }
    });
  });
</script>

