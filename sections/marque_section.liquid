     {% schema %}
  {
    "name": "Merquee Section new",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
  {
   "id": "image_marquee",
   "type": "image_picker",
    "label": "marquee image" 
   },
      {
        "id" : "bg-color",
        "type" : "color",
        "label" : "Background Color"
      },
