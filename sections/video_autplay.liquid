<div class="containerdiv">
  <div class="testing-collection">
      <div class="main_product"{% if section.settings.slider_grid == "1" %} collectionslide {% endif %} {% if section.settings.slider_grid == "2" %} grid {% endif %}">      
        
               {% for block in section.blocks %}
                 <div class="mainimg video01 {% if section.settings.product_limet=="1" %}mainimg3{% endif %} {% if section.settings.product_limet=="3" %}mainimg5{% endif %} ">
                    {% assign videoId = block.settings.video_url | split: '?v=' %}
